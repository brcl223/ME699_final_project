<?xml version="1.0"?>
<!-- Attribution: Code modified from Mathworks.com URDF tutorial -->
<robot name = "linkage">
  <!-- links section -->>
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.5" iyy="0.5" izz="0.5" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  <link name="link A">
    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.5" />
      <inertia ixx="0.5" iyy="0.5" izz="0.5"
ixy="0" ixz="0" iyz="0" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" />
      <geometry>
        <sphere radius="0.05" />
      </geometry>
      <material name="gray A">
        <color rgba="0.1 0.1 0.1 1" />
      </material>
    </visual>
  </link>
  <link name="link B">
    <inertial>
      <origin xyz="0 0 -0.5" />
      <mass value="0.5" />
      <inertia ixx="0.5" iyy="0.5" izz="0.5"
  ixy="0" ixz="0" iyz="0" />
    </inertial>
    <visual>
      <origin xyz="0 0 -0.5" />
      <geometry>
        <cylinder radius="0.05" length="1"  />
      </geometry>
      <material name="gray B">
        <color rgba="0.3 0.3 0.3 1" />
      </material>
    </visual>
  </link>
  <link name="link C">
    <inertial>
      <origin xyz="0 0 -0.5" />
      <mass value="0.5" />
      <inertia ixx="0.5" iyy="0.5" izz="0.5"
  ixy="0" ixz="0" iyz="0" />
    </inertial>
    <visual>
      <origin xyz="0 0 -0.5" />
      <geometry>
        <cylinder radius="0.05" length="1"  />
      </geometry>
      <material name="gray C">
        <color rgba="0.5 0.5 0.5 1" />
      </material>
    </visual>
  </link>

  <!-- joints section -->>
  <joint name="joint base" type="continuous">
    <parent link="base_link"/>
    <child link="link A"/>
    <origin xyz="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>
  <joint name="joint A" type="continuous">
    <parent link="link A" />
    <child link="link B" />
    <origin xyz="0 0 0" />
    <axis xyz="0 1 0" />
  </joint>
  <joint name="joint B" type="continuous">
    <parent link="link B" />
    <child link="link C" />
    <origin xyz="0 0 -1" />
    <axis xyz="0 1 0" />
    <dynamics damping ="0.002" />
  </joint>
</robot>
